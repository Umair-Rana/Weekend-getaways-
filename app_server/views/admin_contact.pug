extends admin

block content
  .w3-row-padding
    .w3-container.w3-center
      // <img src="7.jpg" alt="Norway" style="width:100%" class="w3-hover-opacity">
      .w3-container.w3-white
        p
          b Lorem Ipsum
        p
          | Praesent tincidunt sed tellus ut rutrum. Sed vitae justo condimentum, porta lectus vitae, ultricies congue gravida diam non fringilla.
      .table100.ver1.m-b-110
        table(data-vertable='ver1')
          thead
            tr.row100.head
              th.column100.column1(data-column='column1') UserName 
              th.column100.column2(data-column='column2') Email
              th.column100.column3(data-column='column3') Message
              th.column100.column4(data-column='column4')
          tbody
            each contact, i in contacts  
                tr.row100
                    td.column100.column1(data-column='column1') #{contact.username}
                    td.column100.column2(data-column='column2') #{contact.email}
                    td.column100.column3(data-column='column3') #{contact.message}
                    td.column100.column3(data-column='column3')
                        a.delete#del(href="/admin/"+output+"/contacts/"+contact._id,data-id=contact._id)(style=" color: red") Delete
    script.
      // Script to open and close sidebar
      function w3_open() {
      document.getElementById("mySidebar").style.display = "block";
      document.getElementById("myOverlay").style.display = "block";
      }
      function w3_close() {
      document.getElementById("mySidebar").style.display = "none";
      document.getElementById("myOverlay").style.display = "none";
      }
