extends admin

block content
  .w3-row-padding
    .w3-container.w3-center
      // <img src="7.jpg" alt="Norway" style="width:100%" class="w3-hover-opacity">
      .w3-container.w3-white
        p
          b Lorem Ipsum
        p
          | Praesent tincidunt sed tellus ut rutrum. Sed vitae justo condimentum, porta lectus vitae, ultricies congue gravida diam non fringilla.
      .table100.ver1.m-b-110
        table(data-vertable='ver1')
          thead
            tr.row100.head
              th.column100.column1(data-column='column1') First Name
              th.column100.column2(data-column='column2') Last Name
              th.column100.column3(data-column='column3') Email
              th.column100.column4(data-column='column4') Cell
              th.column100.column5(data-column='column5') Password
          tbody
            each user, i in users  
                tr.row100
                    td.column100.column1(data-column='column1') #{user.firstname}
                    td.column100.column2(data-column='column2') #{user.lastname}
                    td.column100.column3(data-column='column3') #{user.email}
                    td.column100.column4(data-column='column4') #{user.cell_no}
                    td.column100.column5(data-column='column5') #{user.password}
          
    script.
      // Script to open and close sidebar
      function w3_open() {
      document.getElementById("mySidebar").style.display = "block";
      document.getElementById("myOverlay").style.display = "block";
      }
      function w3_close() {
      document.getElementById("mySidebar").style.display = "none";
      document.getElementById("myOverlay").style.display = "none";
      }
